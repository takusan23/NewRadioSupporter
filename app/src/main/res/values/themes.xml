<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewRadioSupporter" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NewRadioSupporter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NewRadioSupporter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NewRadioSupporter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.NewRadioSupporter.SplashScreen" parent="Theme.SplashScreen">
        <!-- スプラッシュスクリーンで表示するアイコン。drawable-v31 ( Android 12 ) からアニメーションするようになっています -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/android_new_radio_supporter_splash_screen_icon</item>
        <!-- アニメーション時間 -->
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <!-- スプラッシュスクリーンが終わった後に適用するテーマ -->
        <item name="postSplashScreenTheme">@style/Theme.NewRadioSupporter.NoActionBar</item>
    </style>
</resources>